<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:id="@+id/action_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#123962"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/imgLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop" />
        </LinearLayout>


        <TextView
            android:id="@+id/viewitembarcodename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgLayout"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:text="Item Barcode"
            android:textColor="#ffff"
            android:autoSizeMaxTextSize="50sp"
            android:autoSizeMinTextSize="10sp"
            android:fontFamily="@font/poppins"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dot1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgLayout"
            android:layout_alignBottom="@+id/viewitembarcodename"
            android:layout_marginStart="11dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/viewitembarcodename"
            android:text=":"
            android:autoSizeMaxTextSize="50sp"
            android:autoSizeMinTextSize="10sp"
            android:fontFamily="@font/poppins"
            android:textSize="12sp"
            android:textColor="#ffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewitembarcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgLayout"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="7dp"
            android:autoSizeMaxTextSize="50sp"
            android:autoSizeMinTextSize="10sp"
            android:fontFamily="@font/poppins"
            android:layout_toEndOf="@+id/viewitembarcodename"
            android:text="TextView"
            android:textColor="#ffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/viewitemnamename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewitembarcodename"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_weight="40"
            android:text="Item Name"
            android:textColor="#ffff"
            android:textSize="12sp"
            android:autoSizeMaxTextSize="50sp"
            android:autoSizeMinTextSize="10sp"
            android:fontFamily="@font/poppins"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dot2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dot1"
            android:layout_alignStart="@+id/dot1"
            android:layout_alignBottom="@+id/viewitemnamename"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:text=":"
            android:autoSizeMaxTextSize="50sp"
            android:autoSizeMinTextSize="10sp"
            android:fontFamily="@font/poppins"
            android:textSize="12sp"
            android:textColor="#ffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewitemname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewitembarcode"
            android:layout_alignStart="@+id/viewitembarcode"
            android:layout_marginStart="0dp"
            android:layout_marginTop="2dp"
            android:text="TextView"
            android:autoSizeMaxTextSize="50sp"
            android:autoSizeMinTextSize="10sp"
            android:fontFamily="@font/poppins"
            android:textColor="#ffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/viewitemquantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewitemcategoryname"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:text="Item Quantity"
            android:textColor="#ffff"
            android:autoSizeMaxTextSize="50sp"
            android:autoSizeMinTextSize="10sp"
            android:fontFamily="@font/poppins"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dot4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dot3"
            android:layout_alignStart="@+id/dot3"
            android:layout_alignBottom="@+id/viewitemquantity"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:text=":"
            android:autoSizeMaxTextSize="50sp"
            android:autoSizeMinTextSize="10sp"
            android:fontFamily="@font/poppins"
            android:textSize="12sp"
            android:textColor="#ffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewitemquantityleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewitemcategory"
            android:layout_alignStart="@+id/viewitemcategory"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="40"
            android:autoSizeMaxTextSize="50sp"
            android:autoSizeMinTextSize="10sp"
            android:fontFamily="@font/poppins"
            android:text="TextView"
            android:textColor="#ffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/viewitemcategoryname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewitemnamename"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:text="Item Category"
            android:autoSizeMaxTextSize="50sp"
            android:autoSizeMinTextSize="10sp"
            android:fontFamily="@font/poppins"
            android:textColor="#ffff"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dot3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dot2"
            android:layout_alignStart="@+id/dot2"
            android:layout_alignBottom="@+id/viewitemcategoryname"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:text=":"
            android:autoSizeMaxTextSize="50sp"
            android:autoSizeMinTextSize="10sp"
            android:fontFamily="@font/poppins"
            android:textSize="12sp"
            android:textColor="#ffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewitemcategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewitemname"
            android:layout_alignStart="@+id/viewitemname"
            android:layout_marginStart="0dp"
            android:layout_marginTop="11.5dp"
            android:text="TextView"
            android:autoSizeMaxTextSize="50sp"
            android:autoSizeMinTextSize="10sp"
            android:fontFamily="@font/poppins"
            android:textColor="#ffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/itemprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewitemquantity"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:text="Item Price"
            android:autoSizeMaxTextSize="50sp"
            android:autoSizeMinTextSize="10sp"
            android:fontFamily="@font/poppins"
            android:textColor="#ffff"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dot4"
            android:layout_alignStart="@+id/dot4"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:text=":"
            android:autoSizeMaxTextSize="50sp"
            android:autoSizeMinTextSize="10sp"
            android:fontFamily="@font/poppins"
            android:textSize="12sp"
            android:textColor="#ffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewitemprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewitemquantityleft"
            android:layout_alignStart="@+id/viewitemquantityleft"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:text="TextView"
            android:autoSizeMaxTextSize="50sp"
            android:autoSizeMinTextSize="10sp"
            android:fontFamily="@font/poppins"
            android:textSize="12sp"
            android:textColor="#ffff"
             />

        <TextView
            android:id="@+id/dateadded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Date"
            android:textColor="#ffff"
            android:textSize="13sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/viewdateadded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="91dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="100dp"
            android:layout_toEndOf="@+id/dateadded"
            android:text="TextView"
            android:textColor="#ffff"
            android:textSize="13sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/timeadded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:text="Time"
            android:textColor="#ffff"
            android:textSize="13sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/viewtimeadded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="120dp"
            android:layout_toEndOf="@+id/timeadded"
            android:text="TextView"
            android:textColor="#ffff"
            android:textSize="13sp"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewitemprice"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_Update"
                android:layout_width="130dp"
                android:layout_height="55dp"
                android:layout_marginRight="50dp"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/ic_baseline_edit_24"
                android:fontFamily="@font/poppins"
                android:text="Update"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btn_Delete"
                android:layout_width="130dp"
                android:layout_height="55dp"
                android:text="Delete"
                android:textSize="14sp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/btn_delete_icon"
                android:backgroundTint="@color/white"
                android:textAllCaps="false" />
        </LinearLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>