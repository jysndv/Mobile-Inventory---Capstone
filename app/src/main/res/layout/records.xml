<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true"
    android:background="@color/cardview_shadow_end_color">

    <RelativeLayout
        android:id="@+id/action_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#123962"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/record_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Email"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeStepGranularity="1sp"
            android:fontFamily="@font/poppins"
            android:textColor="#ffff"
            android:textSize="12sp"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeStepGranularity="1sp"
            android:fontFamily="@font/poppins"
            android:layout_marginStart="91dp"
            android:textColor="#ffff"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/view_record_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_toEndOf="@+id/record_email"
            android:text="TextView"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeStepGranularity="1sp"
            android:fontFamily="@font/poppins"
            android:textSize="12sp"
            android:textColor="#ffff" />

        <TextView
            android:id="@+id/record_barcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Item Barcode"
            android:textSize="12sp"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeStepGranularity="1sp"
            android:fontFamily="@font/poppins"
            android:textColor="#ffff"
             />


        <TextView
            android:id="@+id/view_record_barcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/view_record_email"
            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            android:text="TextView"
            android:textSize="12sp"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeStepGranularity="1sp"
            android:fontFamily="@font/poppins"
            android:textColor="#ffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeStepGranularity="1sp"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="20dp"
            android:layout_marginStart="91dp"
            android:textColor="#ffff"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/record_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Item Name"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeStepGranularity="1sp"
            android:textSize="12sp"
            android:fontFamily="@font/poppins"
            android:textColor="#ffff"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeStepGranularity="1sp"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="40dp"
            android:layout_marginStart="91dp"
            android:textColor="#ffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/view_record_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/view_record_barcode"
            android:layout_marginStart="0dp"
            android:layout_marginTop="40dp"
            android:text="TextView"
            android:textSize="12sp"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeStepGranularity="1sp"
            android:fontFamily="@font/poppins"
            android:textColor="#ffff" />

        <TextView
            android:id="@+id/qty_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Quantity Out"
            android:textSize="12sp"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeStepGranularity="1sp"
            android:fontFamily="@font/poppins"
            android:textColor="#ffff"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeStepGranularity="1sp"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="60dp"
            android:layout_marginStart="91dp"
            android:textColor="#ffff"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/view_qty_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/view_record_name"
            android:layout_marginStart="0dp"
            android:layout_marginTop="60dp"
            android:text="TextView"
            android:textSize="12sp"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeStepGranularity="1sp"
            android:fontFamily="@font/poppins"
            android:textColor="#ffff" />

        <TextView
            android:id="@+id/record_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="Quantity Left"
            android:textColor="#ffff"
            android:textSize="12sp"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeStepGranularity="1sp"
            android:fontFamily="@font/poppins"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeStepGranularity="1sp"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="80dp"
            android:layout_marginStart="91dp"
            android:textColor="#ffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/view_record_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/view_qty_out"
            android:layout_marginStart="0dp"
            android:layout_marginTop="80dp"
            android:text="TextView"
            android:textSize="12sp"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeStepGranularity="1sp"
            android:fontFamily="@font/poppins"
            android:textColor="#ffff" />

        <TextView
            android:id="@+id/record_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Date / Time"
            android:textColor="#ffff"
            android:textSize="12sp"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeStepGranularity="1sp"
            android:fontFamily="@font/poppins"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:layout_marginTop="100dp"
            android:layout_marginStart="91dp"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeStepGranularity="1sp"
            android:fontFamily="@font/poppins"
            android:textColor="#ffff"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/view_record_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/view_record_quantity"
            android:layout_marginStart="0dp"
            android:layout_marginTop="100dp"
            android:text="TextView"
            android:textSize="12sp"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeStepGranularity="1sp"
            android:fontFamily="@font/poppins"
            android:textColor="#ffff" />




    </RelativeLayout>
</androidx.cardview.widget.CardView>