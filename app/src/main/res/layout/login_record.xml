<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:id="@+id/action_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#123962"
        android:padding="5dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="80dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:autoSizeMaxTextSize="50dp"
            android:autoSizeMinTextSize="10dp"
            android:fontFamily="@font/poppins"
            android:text=":" />

        <TextView
            android:id="@+id/view_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffff"
            android:textSize="12sp"
            android:autoSizeMaxTextSize="50dp"
            android:autoSizeMinTextSize="10dp"
            android:fontFamily="@font/poppins"
            android:text="User Email" />


        <TextView
            android:id="@+id/viewuser_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:textColor="#ffff"
            android:textSize="12sp"
            android:autoSizeMaxTextSize="50dp"
            android:autoSizeMinTextSize="10dp"
            android:fontFamily="@font/poppins"
            android:layout_toEndOf="@+id/view_email"
            android:text="TextView" />


        <TextView
            android:id="@+id/date_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date Login"
            android:layout_marginTop="20dp"
            android:textSize="12sp"
            android:autoSizeMaxTextSize="50dp"
            android:autoSizeMinTextSize="10dp"
            android:fontFamily="@font/poppins"
            android:textColor="#ffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="80dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:autoSizeMaxTextSize="50dp"
            android:autoSizeMinTextSize="10dp"
            android:fontFamily="@font/poppins"
            android:text=":" />

        <TextView
            android:id="@+id/viewdate_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/viewuser_email"
            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            android:text="TextView"
            android:autoSizeMaxTextSize="50dp"
            android:autoSizeMinTextSize="10dp"
            android:fontFamily="@font/poppins"
            android:textColor="#ffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/time_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time Login"
            android:layout_marginTop="40dp"
            android:textSize="12sp"
            android:autoSizeMaxTextSize="50dp"
            android:autoSizeMinTextSize="10dp"
            android:fontFamily="@font/poppins"
            android:textColor="#ffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="80dp"
            android:textColor="@color/white"

            android:autoSizeMaxTextSize="50dp"
            android:autoSizeMinTextSize="10dp"
            android:fontFamily="@font/poppins"
            android:textSize="12sp"
            android:text=":" />

        <TextView
            android:id="@+id/viewtime_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/viewdate_login"
            android:layout_marginStart="0dp"
            android:layout_marginTop="40dp"
            android:autoSizeMaxTextSize="50dp"
            android:autoSizeMinTextSize="10dp"
            android:fontFamily="@font/poppins"
            android:text="TextView"
            android:textColor="#ffff"
            android:textSize="12sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>